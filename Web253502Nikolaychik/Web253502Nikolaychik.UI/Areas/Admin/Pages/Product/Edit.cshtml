@page
@using Microsoft.AspNetCore.Authorization
@model Web253502Nikolaychik.UI.Areas.Admin.Views.Product.EditModel
@attribute [Authorize(Policy = "admin")]
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Commodity</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Commodity.Id" />
            <input type="hidden" asp-for="Commodity.Image" />
            <input type="hidden" asp-for="Commodity.ImageMimeType" />

            <div class="form-group">
                <label asp-for="Commodity.Name" class="control-label"></label>
                <input asp-for="Commodity.Name" class="form-control" />
                <span asp-validation-for="Commodity.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Commodity.Description" class="control-label"></label>
                <input asp-for="Commodity.Description" class="form-control" />
                <span asp-validation-for="Commodity.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Commodity.CategoryId" class="control-label"></label>
                <select asp-for="Commodity.CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
                <span asp-validation-for="Commodity.CategoryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Commodity.Price" class="control-label"></label>
                <input asp-for="Commodity.Price" class="form-control" />
                <span asp-validation-for="Commodity.Price" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label>Current Image:</label>
                <img src="@Model.Commodity.Image" alt="Current Image" style="max-width: 200px;" />
            </div>

            <div class="form-group">
                <label asp-for="Image">Upload New Image:</label>
                <input asp-for="Image" type="file" class="form-control" accept="image/*" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
