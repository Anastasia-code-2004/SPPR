@model IEnumerable<ListDemo>
@{
    ViewBag.Title = "Index";
    var request = ViewContext.HttpContext.Request;
    var returnUrl = request.Path + request.QueryString.ToUriComponent();
}
<main class="container">
    <div class="mb-4">
        <h2 class="fw-bold">@ViewData["Lab"]</h2>
        <h3 class="fw-bold">Список</h3>
        <ol type="A">
            @for (var i = 0; i < 5; i++)
            {
                <li>Элемент @i</li>
            }
        </ol>
    </div>
    <hr class="dropdown-divider">
    <h3 class="fw-bold">Форма</h3>
    <form method="post" class="mt-1">
       
        <div style="margin-left: 8rem;">
            <select asp-items="@(new SelectList(Model, "Id", "Name"))"
                    name="selDemo" class="form-select">
            </select>
            <div class="form-check">
                <input class="form-check-input" type="checkbox" id="checkbox1" name="checkbox1">
                <label class="form-check-label" for="checkbox1">
                    Чек-бокс 1
                </label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="checkbox" id="checkbox2" name="checkbox2">
                <label class="form-check-label" for="checkbox2">
                    Чек-бокс 2
                </label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" id="radio1" name="radioGroup" value="option1" checked>
                <label class="form-check-label" for="radio1">
                    Радио-кнопка 1
                </label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" id="radio2" name="radioGroup" value="option2">
                <label class="form-check-label" for="radio2">
                    Радио-кнопка 2
                </label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" id="radio3" name="radioGroup" value="option3">
                <label class="form-check-label" for="radio3">
                    Радио-кнопка 3
                </label>
            </div>
        </div>
        <div class="form-group d-flex align-items-center mt-2">
            <label for="exampleInputEmail1" class="me-2">Логин:</label>
            <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp"
                   style="margin-left: 70px; flex: 1;" placeholder="Введите имя" name="login">
        </div>
        <div class="form-group d-flex align-items-center mt-2">
            <label for="exampleInputPassword1" class="me-2">Пароль:</label>
            <input type="password" class="form-control"3 id="exampleInputPassword1"
                   style="margin-left: 60px; flex: 1;" placeholder="Введите пароль" name="password">
        </div>

        <button type="submit" class="btn btn-primary mt-5">Отправить</button>
    </form>
</main>